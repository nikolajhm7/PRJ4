<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Client.UI.ViewModels"
             x:Class="Client.UI.Views.NewUserPage"
             x:DataType="viewModels:NewUserViewModel"
             Title="MakeNewUserPage">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

        <Label
            Text="Make a new user"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />

        <Image
            Source="logo.png"
            HeightRequest="185"
            Aspect="AspectFit"
            SemanticProperties.Description="Party Play Palace" />

        <Entry Placeholder="Enter username"
               Text="{Binding LoginUsername}" />

        <Entry Placeholder="Enter password"
               Text="{Binding LoginPassword}" />

        <Entry Placeholder="Email"
               Text="{Binding Email}" />

        <Button
            x:Name="Create"
            Text="Login" 
            HorizontalOptions="Fill"
            Command="{Binding MakeNewUserCommand}"/>
    </VerticalStackLayout>

</ContentPage>