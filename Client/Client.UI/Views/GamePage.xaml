<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Client.UI.ViewModels"
             x:Class="Client.UI.Views.GamePage"
             x:DataType="viewModels:GameViewModel"
             Title="GamePage">

        <Grid 
            RowDefinitions="*,*,*,*"
            ColumnDefinitions="*,*,*,*"
            >
            <Label 
                Grid.Row="0"
                Grid.Column="0"
                Text="{Binding LobbyId}"/>

            <Label 
                Grid.Row="0"
                Grid.Column="1"
                FontAttributes="Bold"
                Text="{Binding ErrorCounter}"
                />
            <Button 
                Style="{StaticResource normalBtn}"
                Grid.Row="0"   
                Grid.Column="2"
                Text="Start Game"
                Command="{Binding StartGameCommand}"/>

            <Button 
                    Grid.Row="3"
                    Grid.Column="3"
                    Style="{StaticResource normalBtn}"
                    WidthRequest="100"
                    Text="Reset"
                    Command="{Binding RestartGameCommand}"/>

            <Entry 
                Grid.Row="1"
                Grid.Column="0"
                Placeholder="Enter letter"
                Text="{Binding Letter}"/>

        <ListView ItemsSource="{Binding GuessedChars}"
                  Grid.Row="3"
                  Grid.Column="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button 
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource normalBtn}"
                Text="Submit"
                Command="{Binding GuessLetterCommand}"
                CommandParameter="{Binding Letter}"/>

    </Grid>
</ContentPage>
