<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Client.UI.ViewModels"
             x:Class="Client.UI.Views.GamePage"
             x:DataType="viewModels:GameViewModel"
             Title="GamePage">
    <Grid RowDefinitions="Auto, *">
        <Label Text="{Binding Title}" />
        <Button Text="Start Game" Command="{Binding StartGameCommand}" />

        <Entry Grid.Row="4"
               HorizontalOptions="Center"
               Placeholder="Enter letter"
               ></Entry>
        <Button Grid.Row="5"
                Text="Submit"
                Command="{Binding SubmitLetterCommand}"
                ></Button>

        <!--List of players:-->
        <CollectionView ItemsSource="{Binding Players}">
            <CollectionView.ItemTemplate>
                <!--<DataTemplate>
                    <Label Text="{Binding Name}" />
                </DataTemplate>-->
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
