<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.UI.Views.GamePage"
             Title="GamePage">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">
        <Label 
            x:Name="secretWord"
            FontSize="18"
            HorizontalOptions="Center"/>
        <Button
            x:Name="startButton"
            Text="Start"
            Clicked="StartGame"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>