<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Client.UI.ViewModels"
             x:Class="Client.UI.Views.GamePage"
             x:DataType="viewModels:GameViewModel"
             Title="GamePage">

    <ScrollView>
        <Grid RowDefinitions=".6*, .4*">

            <VerticalStackLayout Spacing="10">
                <Label HorizontalTextAlignment="Center"
                       FontAttributes="Bold"
                       Text="{Binding ErrorCounter}"
                       />
                <Button HorizontalOptions="Center"
                        WidthRequest="100"
                        Text="Start Game"
                        Command="{Binding StartGameCommand}"/>

                <Label HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontSize="30"
                       Text="{Binding LettersStatus}"/>

                <Label HorizontalOptions="Center"
                       FontSize="35"
                       Text="{Binding Message}"/>

                <Button HorizontalOptions="Center"
                        WidthRequest="100"
                        Text="Reset"
                        Command="{Binding RestartGameCommand}"/>

            </VerticalStackLayout>

            <Entry Grid.Row="1"
                   HorizontalOptions="Center"
                   Placeholder="Enter letter"/>
            <Button Grid.Row="1"
                    HorizontalOptions="Center"
                    WidthRequest="100"
                    Text="Submit"
                    Command="{Binding GuessLetterCommand}"/>


        </Grid>

    </ScrollView>
</ContentPage>
