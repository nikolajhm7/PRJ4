<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Client.UI.ViewModels"
             xmlns:behaviors="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="Client.UI.Views.PlatformPage"
            >
    <Grid
        Padding="50,0"
        RowDefinitions="*,*,*,*,10"
        ColumnDefinitions="*,2*,2*,*"
        ColumnSpacing="10"
        >

        <Label 
            Text="{Binding Username}"
            Style="{StaticResource SubHeadline}"
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            HorizontalOptions="Fill"
            VerticalOptions="Center"
        />

        <ImageButton
            Source="{Binding Avatar}"
            Command="{Binding GoToSettingsCommand}"
            Aspect="AspectFit"
            Grid.Row="0"
            Grid.Column="3"
            />

        <Button
            Text="Log ud"
            Style="{StaticResource normalBtn}"
            Command="{Binding LogOutCommand}"
            Grid.Row="3"
            Grid.Column="3"
            BackgroundColor="Bisque"
        />

        <Button
            Text="Host"
            Grid.Row="1"
            Style="{StaticResource normalBtn}"
            Grid.Column="3"
            BackgroundColor="Bisque"
            Command="{Binding ChangeViewCommand}"
            IsVisible="{Binding Showhost}"/>


        <Button
            Text="Join"
            Style="{StaticResource normalBtn}"
            Grid.Row="2"
            Grid.Column="3"
            Command="{Binding GoToJoinCommand}"
            IsVisible="{Binding Showhost}"
        />
        <Button
            Text="Back"
            Style="{StaticResource normalBtn}"
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            BackgroundColor="Bisque"
            IsVisible="{Binding GamesShowing}"
            Command="{Binding ChangeViewCommand}"/>


        <CollectionView 
                Grid.Row="1"
                Grid.Column="1"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
            x:Name="GameCollectionView"
            ItemsSource="{Binding Games}" 
            EmptyView="No Games"
            VerticalOptions="FillAndExpand"
            IsVisible="{Binding GamesShowing}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="3" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <ImageButton 
                            Source="{Binding Image}"
                            WidthRequest="100"
                            HeightRequest="100"
                            Command ="{Binding Source={x:Reference GameCollectionView},Path=BindingContext.GoToLobbyCommand}"
                            CommandParameter="{Binding .}"
                            />
                        <Label 
                            Text="{Binding Name}" 
                            HorizontalOptions="Center" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <ImageButton
            Source="{Binding Games[0].Image}"
            Aspect="AspectFit"
            Grid.Row="1"
            Grid.Column="1"
            IsVisible="{Binding GamesShowing}"
            Command ="{Binding GoToLobbyCommand}"
            CommandParameter="{Binding Games[0]}"/>

        <ImageButton
            Source="{Binding Games[1].Image}"
            Aspect="AspectFit"
            Grid.Row="1"
            Grid.Column="2"
            IsVisible="{Binding GamesShowing}"
            Command ="{Binding GoToLobbyCommand}"
            CommandParameter="{Binding Games[1]}"/>
        
        <ImageButton
            Source="{Binding Games[2].Image}"
            Aspect="AspectFit"
            Grid.Row="2"
            Grid.Column="1"
            IsVisible="{Binding GamesShowing}"
            Command ="{Binding GoToLobbyCommand}"
            CommandParameter="{Binding Games[2]}"/>



        <ImageButton
            Source="{Binding Games[3].Image}"
            Aspect="AspectFit"
            Grid.Row="2"
            Grid.Column="2"
            IsVisible="{Binding GamesShowing}"
            Command ="{Binding GoToLobbyCommand}"
            CommandParameter="{Binding Games[3]}"/>

        <StackLayout Grid.Column="0" Grid.Row="0" Grid.RowSpan="5">
            <Label Text="Friends List" HorizontalOptions="Center" />
        
            <CollectionView x:Name="FriendsCollectionView" 
            ItemsSource="{Binding FriendsCollection}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                        
                            <Label Text="{Binding Name}" Grid.Column="0" />
                        
                            <StackLayout Orientation="Horizontal" Grid.Column="1">
                                <Button 
                                    BackgroundColor="Red"
                                    Command="{Binding Source={x:Reference FriendsCollectionView}, Path=BindingContext.DeclineFriendRequestCommand}"
                                    CommandParameter="{Binding Name}"
                                    WidthRequest="10"
                                    HeightRequest="10"/>
                                <Button 
                                    BackgroundColor="Green"
                                    Command="{Binding Source={x:Reference FriendsCollectionView}, Path=BindingContext.AcceptFriendRequestCommand}"
                                    CommandParameter="{Binding Name}"
                                    IsVisible="{Binding IsPending}"
                                    WidthRequest="10"
                                    HeightRequest="10"/>
                            </StackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>

        <StackLayout Grid.Row="3" Grid.Column="0">
            <Entry Placeholder="Enter friends username"
                   Text="{Binding AddFriendText}"/>
            <Button Text="Add Friend"
                    Command="{Binding AddNewFriendCommand}"
                    Style="{StaticResource normalBtn}"/>
        </StackLayout>

    </Grid>
</ContentPage>