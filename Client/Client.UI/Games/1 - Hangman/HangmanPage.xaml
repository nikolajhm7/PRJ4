<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Client.UI.Games"
             x:Class="Client.UI.Games.HangmanPage"
             x:DataType="viewModels:HangmanViewModel"
             Title="HangmanPage">
    <ContentPage.Resources>
        <viewModels:BackgroundColorConverter x:Key="backgroundColorConverter" />
    </ContentPage.Resources>

    <Grid 
            RowDefinitions="*,*,*,*"
            ColumnDefinitions="*,*,*,*">

        <!--Elements for row 0-->
        <Label 
                Grid.Row="0"
                Grid.Column="0"
                FontSize="Large"
                Text="{Binding LobbyIdLabel}"/>

        <Label
                Grid.Row="0"
                Grid.Column="1"
                FontSize="32"
                Grid.ColumnSpan="2"
                HorizontalOptions="Center"
                Text="{Binding Title}"/>

        <Label 
                Grid.Row="0"
                Grid.Column="3"
                FontSize="Large"
                FontAttributes="Bold"
                Text="{Binding ErrorLabel}"/>


        <!--Elements for row 1-->

        <Entry 
                Grid.Row="1"
                Grid.Column="0"
                Placeholder="Enter letter"
                FontSize="Large"
                ClearButtonVisibility="WhileEditing"
                Text="{Binding Letter}"/>

        <Label
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Text="{Binding HiddenWord}"
                FontSize="Large"
                CharacterSpacing="10"/>


        <Image
                Grid.Row="1"
                Grid.Column="3"
                Source="{Binding ImageSource}"
                HeightRequest="200"/>

        <!--Elements for row 2-->

        <Button 
                Grid.Row="2"
                Grid.Column="0"
                Style="{StaticResource normalBtn}"
                Text="Submit"
                Command="{Binding GuessLetterCommand}"
                CommandParameter="{Binding Letter}"/>
        <Label
                Grid.Row="2"
                Grid.Column="1"
                FontSize="Medium"
                Text="{Binding StatusMessage}"/>
        <!--View players in game-->
        <CollectionView 
                x:Name="PlayersCollectionView" 
                ItemsSource="{Binding PlayerNames}" 
                SelectionMode="None" 
                Grid.Column="2"
                Grid.ColumnSpan="1"
                Grid.Row="2"
                Grid.RowSpan="5">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
                <!-- Adjust Span for desired number of columns -->
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame 
                        CornerRadius="10" 
                        Padding="10" 
                        Margin="5" 
                        HorizontalOptions="FillAndExpand"
                        BackgroundColor="{Binding ., Converter={StaticResource backgroundColorConverter}}">
                        <Label 
                            Text="{Binding .}" 
                            HorizontalTextAlignment="Center"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


        <!--Elements for row 3-->

        <!--View List of Guessed Characters-->
        <CollectionView 
                ItemsSource="{Binding GuessedChars}" 
                SelectionMode="None" 
                Grid.Column="0"
                Grid.ColumnSpan="1"
                Grid.Row="3"
                Grid.RowSpan="5">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="7" />
                <!-- Adjust Span for desired number of columns -->
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame 
                        CornerRadius="10" 
                        Padding="10" 
                        Margin="5" 
                        HorizontalOptions="FillAndExpand">
                        <Label 
                            Text="{Binding .}"
                            FontSize="Medium"
                            HorizontalTextAlignment="Center"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label 
                Grid.Column="1"
                Grid.Row="3"
                Text="{Binding FrontPlayer}">
            
        </Label>
        
        <Label
                Grid.Row="3"
                Grid.Column="2"
                Text="{Binding PlayerStatus}"
                FontSize="Medium"/>

        <Button 
                Grid.Row="3"
                Grid.Column="3"
                Style="{StaticResource normalBtn}"
                WidthRequest="100"
                Text="Reset"
                Command="{Binding RestartGameCommand}"/>


    </Grid>
</ContentPage>